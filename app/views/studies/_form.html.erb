<%= simple_form_for [@project, @project.studies.build] , :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :number %>
	<%= f.input :objective %>
	<%= f.input :NoOfSites %>
	<%= f.input :NoOfSections %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>